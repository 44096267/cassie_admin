{
  "$schema": "..\\node_modules/@tauri-apps/cli\\schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run serve",
    "devPath": "http://localhost:8001",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "cassie_desktop",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": true,
      "http": {
        "scope": ["http://washcar.cymcar.com/admin/*","http://localhost:9999/admin/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Business",
      "copyright": "版权所有: 348040933@qq.com",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.cassie.dev",
      "longDescription": "rust axum 桌面演示版 使用 tauri开发 欢迎大家使用",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "rust axum 桌面版",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "center":true,
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "cassie_desktop",
        "width": 1000,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false
      },
      {
        "center":true,
        "height": 200,
        "decorations":false,
        "width": 800,
        "label":"splashscreen",
        "url": "splashscreen.html"
      }
    ]
  }
}
